            }
            
            @Step {
                Create a GameScore object and save it to Parse Server.
                
                This creates sample data that you can query in the following sections.
                
                @Code(name: "YourApp.swift", file: 02-finding-objects-04-save.swift)
            }
            
            @Step {
                Create a basic query with multiple constraints.
                
                This query finds GameScore objects where `points` is greater than 50 and `createdAt` is after a specific date. You can chain multiple constraints together.
                
                @Code(name: "YourApp.swift", file: 02-finding-objects-05-query.swift)
            }
        }
    }
    
