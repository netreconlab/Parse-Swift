            }
            
            @Step {
                Create instances of advanced data types.
                
                `ParsePolygon` represents a geographic area using multiple coordinates, while `ParseBytes` wraps binary data.
                
                @Code(name: "YourApp.swift", file: 01-first-object-21-advanced-create.swift)
            }
            
            @Step {
                Save the object with advanced data types to Parse Server.
                
                The SDK automatically handles encoding these complex types for server storage.
                
                @Code(name: "YourApp.swift", file: 01-first-object-22-advanced-save.swift)
            }
        }
    }
    
